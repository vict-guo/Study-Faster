extends layout

block layout-content
  div.View.WelcomeView
    h1.Banner Study Fast
    div.Message
      div.Title
        h3 Upload Study Notes
        h1 Convert to Text
    div.NavButtons
      form(action='/user' method = 'post' id = 'my_form')
        label(for='fname') First name:
        input#fname(type='text' name='fname')
        div.NavButton
          a(href='javascript:{}' onclick="document.getElementById('my_form').submit();") Go To Upload
